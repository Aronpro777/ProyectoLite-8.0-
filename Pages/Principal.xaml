<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoLite__8._0_.Pages.Principal"
             xmlns:models="clr-namespace:ProyectoLite__8._0_.Models"
             xmlns:views="clr-namespace:ProyectoLite__8._0_.Pages"
             BackgroundColor="White"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,Auto,Auto,*">
        <!-- Header -->
        <Grid Grid.Row="0" HeightRequest="60" BackgroundColor="#A94438" ColumnDefinitions="Auto,*,Auto" Padding="15,0">
            <Image Grid.Column="0" Source="menu_icon.png" WidthRequest="24" HeightRequest="24" HorizontalOptions="Start" />
            <Label Grid.Column="1" Text="SweetBake" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" />
            <Image Grid.Column="2" Source="search_icon_white.png" WidthRequest="24" HeightRequest="24" HorizontalOptions="End" />
        </Grid>

        <!-- Categories -->
        <ScrollView Grid.Row="1" Orientation="Horizontal" HorizontalScrollBarVisibility="Never" Margin="0,10,0,10">
            <StackLayout Orientation="Horizontal" Spacing="15" Padding="15,0">
                <StackLayout Orientation="Vertical" HorizontalOptions="Center" Spacing="5">
                    <ImageButton Source="cat_pay.png" 
                               BackgroundColor="White"
                               CornerRadius="10"
                               WidthRequest="60" 
                               HeightRequest="60"
                               Padding="5"
                               Clicked="OnCategoryClicked"
                               CommandParameter="Pays"/>
                    <Label Text="Pays" FontSize="12" TextColor="#42251B" HorizontalTextAlignment="Center" />
                </StackLayout>

                <StackLayout Orientation="Vertical" HorizontalOptions="Center" Spacing="5">
                    <ImageButton Source="cat_pastel.png" 
                               BackgroundColor="White"
                               CornerRadius="10"
                               WidthRequest="60" 
                               HeightRequest="60"
                               Padding="5"
                               Clicked="OnCategoryClicked"
                               CommandParameter="Pasteles"/>
                    <Label Text="Pasteles" FontSize="12" TextColor="#42251B" HorizontalTextAlignment="Center" />
                </StackLayout>

                <StackLayout Orientation="Vertical" HorizontalOptions="Center" Spacing="5">
                    <ImageButton Source="cat_galleta.png" 
                               BackgroundColor="White"
                               CornerRadius="10"
                               WidthRequest="60" 
                               HeightRequest="60"
                               Padding="5"
                               Clicked="OnCategoryClicked"
                               CommandParameter="Galletas"/>
                    <Label Text="Galletas" FontSize="12" TextColor="#42251B" HorizontalTextAlignment="Center" />
                </StackLayout>

                <StackLayout Orientation="Vertical" HorizontalOptions="Center" Spacing="5">
                    <ImageButton Source="cat_gelatina.png" 
                               BackgroundColor="White"
                               CornerRadius="10"
                               WidthRequest="60" 
                               HeightRequest="60"
                               Padding="5"
                               Clicked="OnCategoryClicked"
                               CommandParameter="Gelatinas"/>
                    <Label Text="Gelatinas" FontSize="12" TextColor="#42251B" HorizontalTextAlignment="Center" />
                </StackLayout>

                <StackLayout Orientation="Vertical" HorizontalOptions="Center" Spacing="5">
                    <ImageButton Source="cat_flan.png" 
                               BackgroundColor="White"
                               CornerRadius="10"
                               WidthRequest="60" 
                               HeightRequest="60"
                               Padding="5"
                               Clicked="OnCategoryClicked"
                               CommandParameter="Flanes"/>
                    <Label Text="Flanes" FontSize="12" TextColor="#42251B" HorizontalTextAlignment="Center" />
                </StackLayout>
            </StackLayout>
        </ScrollView>

        <!-- Title -->
        <Label Grid.Row="2" Text="Todas las recetas" FontSize="20" FontAttributes="Bold" TextColor="#42251B" Margin="15,0,15,10" />

        <!-- Recipes List -->
        <CollectionView Grid.Row="3" ItemsSource="{Binding Recetas}"
                        SelectionMode="None"
                        Margin="15,0,15,0">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2" HorizontalItemSpacing="10" VerticalItemSpacing="10" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Receta">
                    <Grid RowDefinitions="*,Auto" HeightRequest="250" WidthRequest="250">
                        <ImageButton Source="{Binding Imagen}" 
                                   Aspect="AspectFill"
                                   CornerRadius="10"
                                   BackgroundColor="White"
                                   HeightRequest="250"
                                   WidthRequest="250"
                                   Clicked="OnRecipeClicked"
                                   CommandParameter="{Binding Id}"/>

                        <Frame Grid.Row="0"
                               CornerRadius="5" Padding="5,2" Margin="10,10,0,0"
                               BackgroundColor="#C0C0C0"
                               HorizontalOptions="Start" VerticalOptions="Start">
                            <Label Text="{Binding Categoria}" FontSize="10" FontAttributes="Bold" TextColor="White" />
                        </Frame>

                        <StackLayout Grid.Row="1"
                                     Padding="10,0,10,10" Margin="0,-40,0,0"
                                     VerticalOptions="End" HorizontalOptions="Fill">
                            <Frame BackgroundColor="#F0624E" CornerRadius="5" Padding="5,2"
                                   HorizontalOptions="Fill" VerticalOptions="End">
                                <Label Text="{Binding Titulo}"
                                       FontSize="16" FontAttributes="Bold" TextColor="White"
                                       LineBreakMode="TailTruncation" MaxLines="1"
                                       HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            </Frame>
                        </StackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Navigation Bar -->
        <views:BarraNav Grid.Row="4" VerticalOptions="End" HorizontalOptions="Fill" />
    </Grid>
</ContentPage>